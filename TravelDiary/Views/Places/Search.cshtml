@using TravelDiary.Models;


<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <link rel="stylesheet" href="~/css/styles.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Hello friend!</title>
  </head>
  <body>

    <h1>Places That Match Your Search!</h1>
    <ul>
      @if (Model.Count == 0)
      {
        <p>You have no places in your to do list!</p>
      }
      @if(Model.Count != 0)
      {
        @foreach (Place place in Model)
        {
          <li><a href='/places/@place.GetId()'>@place.Name</a></li>
        }
      }


    </ul>
    <a href="/places/new">Add a new location.</a>
    <a href="/places/searchform">Search For a Location.</a>
    <form action="/places/delete" method="post">
      <button class="btn btn-success" type="submit" name="button">Clear All locations</button>
    </form>


  </body>
</html>
